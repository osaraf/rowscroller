        "description": "Deep-link to a dashboard row by name, optionally expand it, and align the row header to the top.",
        "author": {
            "name": "Osamah Rafea",
            "url": "https://github.com/osaraf"
        },
        "version": "0.1.0",
        "updated": "2025-08-25",
        "keywords": [
            "navigation",
            "row",
            "deeplink",
            "scroll"
        ],
        "links": [
            {
                "name": "repository",
                "url": "https://github.com/osaraf/rowscroller"
            },
            {
                "name": "documentation",
                "url": "https://github.com/osaraf/rowscroller#readme"
            }
        ],
        "logos": {
            "small": "img/logo.svg",
